<Window x:Class="AppServer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Server" Height="350" Width="525" WindowStartupLocation="CenterScreen">
	<DockPanel LastChildFill="True" Margin="7">
		<TextBox Name="TB_MessageField" DockPanel.Dock="Bottom" Margin="0,7,0,0" KeyDown="MessageField_KeyDown"/>
		<Button DockPanel.Dock="Bottom" Width="50" Height="23" Click="Button_Click"/>
		<ListBox Name="LB_Users" DockPanel.Dock="Right" Width="150" Margin="7,0,0,0" ScrollViewer.HorizontalScrollBarVisibility="Hidden"/>
		<TextBox Name="TB_Messages" TextWrapping="Wrap" IsReadOnly="True" ScrollViewer.VerticalScrollBarVisibility="Visible"/>
	</DockPanel>
</Window>
